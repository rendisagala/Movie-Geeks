<%- include ("../partials/header") %> <%- include ("../partials/loading") %> <%-
include ("../partials/navbar") %>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <a><i class="fa fa-home"></i> Details</a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Details Section Begin -->
<section class="anime-details spad">
  <div class="container">
    <div class="anime__details__content">
      <div class="row">
        <div class="col-lg-3">
          <div
            class="anime__details__pic set-bg"
            data-setbg="<%= moviePoster %>"
          >
          </div>
        </div>
        <div class="col-lg-9">
          <div class="anime__details__text">
            <div class="anime__details__title">
              <h3><%= movieTitle %></h3>

              <span><%= movieTagLine %></span>
            </div>
            <div class="anime__details__rating">
              <span><%= movieVoteAverage %></span>
            </div>
            <p><%= movieOverview %></p>
            <div class="anime__details__widget">
              <div class="row">
                <div class="col-lg-6 col-md-6">
                  <ul>
                    <li><span>Type:</span>  <%=type %></li>
                    <li>
                      <span>Studios:</span> <%= movieProductionCompanies %>
                    </li>
                    <li><span>Date aired:</span> <%= movieReleaseDates %></li>
                    <li><span>Status:</span> <%= movieStatus %></li>
                    <li><span>Genre:</span> <%= movieGenre %></li>
                  </ul>
                </div>
                <div class="col-lg-6 col-md-6">
                  <ul>
                    <li>
                      <span>Vote Average:</span> <%= movieVoteAverage %> / <%=
                      movieVoteCount %>
                    </li>
                    <li><span>Popularity:</span> <%= moviePopularity %></li>
                    <li><span>Duration:</span> <%= movieRunTime %></li>
                    <li><span>Revenue:</span> <%= movieRevenue %></li>
                    <li><span>Language:</span> <%= movieLanguage %></li>
                  </ul>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12 col-md-12">
               
                  <ul><li><span>Cast : </span>   <% for (let i =0; i <12; i++) { %><a style="color: #fff" href="/person/details/<%= cast[i]%>"><%= castName[i]%>, </a><% } %> etc</li></ul>
                </div>
              </div>
            </div>
            <div class="anime__details__btn">
              <a href=" <%= movieHomePage %>" class="watch-btn" target="_blank"
                ><span>More Details</span> <i class="fa fa-angle-right"></i
              ></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-8">
        <div class="anime__details__review">
          <div class="section-title">
            <h5>Photos & Videos</h5>
          </div>
          <div class="anime__review__item">
            <iframe width="750" height="345" src="<%= movieTrailer%>"  frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>

          <% for (let i =0; i <moviePhotos.length; i++) { %>
          <div class="gallery">
            <a target="_blank" href="<%= moviePhotos[i]%>">
              <img
                src=" <%= moviePhotos[i]%>"
                alt=""
                width="600"
                height="400"
              />
            </a>
          </div><% } %>
        </div>
      </div>

      <div class="col-lg-4 col-md-4">
   
        <div class="anime__details__sidebar">
          <div class="section-title">
            <h5>you might like...</h5>
          </div>
          <% for (let i =0; i <similarMovie.length; i++) { %>
          <div
            class="product__sidebar__view__item set-bg"
            data-setbg=" <%= similarMovieImage[i]%>"
          >
            <div class="ep"> <%= similarMovieVoteAverage[i]%></div>
           
            <h5><a href="/movie/details/<%= similarMovie[i]%>"> <%= similarMovieTitle[i]%></a></h5>
          </div><% } %>
        
        </div>
      </div>
    
 
 </div>
    
   


    
    </div>
  </div>
</section>
<!-- Details Section End -->

<%- include ("../partials/footer") %>
