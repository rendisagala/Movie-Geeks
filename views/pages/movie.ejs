<%- include ("../partials/header") %> <%- include ("../partials/loading") %> <%-
include ("../partials/navbar") %>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="breadcrumb__links">
          <a href="./index.html"><i class="fa fa-home"></i> Home</a>
          <span>Movie</span>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="product__pagination p-0 float-right" >
       
           <a href="/movie/<%= page - 1 %>"  class="fa fa-angle-double-left" id="Page"></a>
            <a href="" class="current-page"><%= page %></a>
            <a href="/movie/<%= page + 1 %>"><i class="fa fa-angle-double-right" id="nextPage"></i></a>
        
          </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Product Section Begin -->
<section class="product-page spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="product__page__content">
          <div class="product__page__title">
            <div class="row">
              <div class="col-lg-8 col-md-8 col-sm-6">
                <div class="section-title">
                  <h4>Trending Movies</h4>
                </div>
              </div>
            </div>
          </div>
          
          <div class="row">
            <% for (let i =0; i <trendingMovie.length; i++) {  %>
                <a href="/movie/details/<%= trendingMovie[i]%>">
            <div class="col-lg-4 col-md-6 col-sm-6">
              <div class="product__item">
                <div
                  class="product__item__pic set-bg"
                  data-setbg="<%= trendingMovieImage[i] %>"
                >
                  <div class="ep"><%= trendingMovieVoteAverage[i] %></div>
                </div>
                <div class="product__item__text">
                  <ul>
                    <% for (let j =0; j <trendingMovieGenre[i].length; j++) {  %>
                    <li><%= trendingMovieGenre[i][j] %></li><% } %>
                  
                  </ul>
                  <h5><a href="/movie/details/<%= trendingMovie[i]%>"><%= trendingMovieTitle[i] %></a></h5>
                </div>
              </div>
            </div></a><% } %>
         
             
          </div>
          <div class="product__page__title">
            <div class="row">
              <div class="col-lg-8 col-md-8 col-sm-6">
                <div class="section-title">
                  <h4>Top Rated Movies</h4>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <% for (let i =0; i <topRatedMovie.length; i++) {  %>
                <a href="/movie/details/<%= topRatedMovie[i]%>">
            <div class="col-lg-4 col-md-6 col-sm-6">
              <div class="product__item">
                <div
                  class="product__item__pic set-bg"
                  data-setbg="<%= topRatedMovieImage[i] %>"
                >
                  <div class="ep"><%= topRatedMovieVoteAverage[i] %></div>
                </div>
                <div class="product__item__text">
                  <ul>
                    <% for (let j =0; j <topRatedMovieGenre[i].length; j++) {  %>
                    <li><%= topRatedMovieGenre[i][j] %></li><% } %>
                  
                  </ul>
                  <h5><a href="/movie/details/<%= topRatedMovie[i]%>"><%= topRatedMovieTitle[i] %></a></h5>
                </div>
              </div>
            </div></a><% } %>
          </div>

          <div class="product__page__title">
            <div class="row">
              <div class="col-lg-8 col-md-8 col-sm-6">
                <div class="section-title">
                  <h4>Popular Movies</h4>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <% for (let i =0; i <popularMovie.length; i++) {  %>
                <a href="/movie/details/<%= popularMovie[i]%>">
            <div class="col-lg-4 col-md-6 col-sm-6">
              <div class="product__item">
                <div
                  class="product__item__pic set-bg"
                  data-setbg="<%= popularMovieImage[i] %>"
                >
                  <div class="ep"><%= popularMovieVoteAverage[i] %></div>
                </div>
                <div class="product__item__text">
                  <ul>
                    <% for (let j =0; j <popularMovieGenre[i].length; j++) {  %>
                    <li><%= popularMovieGenre[i][j] %></li><% } %>
                  
                  </ul>
                  <h5><a href="/movie/details/<%= popularMovie[i]%>"><%= popularMovieTitle[i] %></a></h5>
                </div>
              </div>
            </div></a><% } %>
          </div>

          <div class="product__page__title">
            <div class="row">
              <div class="col-lg-8 col-md-8 col-sm-6">
                <div class="section-title">
                  <h4>UpComing Movies</h4>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <% for (let i =0; i <upComingMovie.length; i++) {  %>
                <a href="/movie/details/<%= upComingMovie[i]%>">
            <div class="col-lg-4 col-md-6 col-sm-6">
              <div class="product__item">
                <div
                  class="product__item__pic set-bg"
                  data-setbg="<%= upComingMovieImage[i] %>"
                >
                  <div class="ep"><%= upComingMovieVoteAverage[i] %></div>
                </div>
                <div class="product__item__text">
                  <ul>
                    <% for (let j =0; j <upComingMovieGenre[i].length; j++) {  %>
                    <li><%= upComingMovieGenre[i][j] %></li><% } %>
                  
                  </ul>
                  <h5><a href="/movie/details/<%= upComingMovie[i]%>"><%= upComingMovieTitle[i] %></a></h5>
                </div>
              </div>
            </div></a><% } %>
          </div>

        </div>
     
      </div>
      <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="product__sidebar">
          <div class="product__sidebar__view">
            <div class="section-title">
              <h5>Playing in Theaters</h5>
            </div>
            <div class="filter__gallery">
                <% for (let i =0; i <nowPlayingMovie.length; i++) {  %>
              <div
                class="product__sidebar__view__item set-bg mix day years"
                data-setbg="<%= nowPlayingMovieImage[i] %>"
              >
               
                <h5><a href=" movie/details/<%=nowPlayingMovie[i] %>"><%= nowPlayingMovieTitle[i] %></a></h5>
              </div><% } %>
          
            </div>
          </div>
         
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Product Section End -->
<%- include ("../partials/footer") %>
