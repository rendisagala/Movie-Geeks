<%- include ("../partials/header") %> <%- include ("../partials/loading") %> <%-
include ("../partials/navbar") %>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <a><i class="fa fa-home"></i> Details</a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Details Section Begin -->
<section class="anime-details spad">
  <div class="container">
    <div class="anime__details__content">
      <div class="row">
        <div class="col-lg-3">
          <div
            class="anime__details__pic set-bg"
            data-setbg="<%= tvPoster %>"
          >
          </div>
        </div>
        <div class="col-lg-9">
          <div class="anime__details__text">
            <div class="anime__details__title">
              <h3><%= tvTitle %></h3>

              <span><%= tvTagLine %></span>
            </div>
            <div class="anime__details__rating">
              <span><%= tvVoteAverage %></span>
            </div>
            <p><%= tvOverview %></p>
            <div class="anime__details__widget">
              <div class="row">
                <div class="col-lg-6 col-md-6">
                  <ul>
                    <li><span>Type:</span>  <%=type %></li>
                    <li>
                      <span>Studios:</span> <%= tvProductionCompanies %>
                    </li>
                    <li><span>First Episode:</span> <%= tvFirstAirDate%></li>
                    <li><span>Last Episode:</span> <%= tvLastAirDate%></li>
                    <li><span>Status:</span> <%= tvStatus %></li>
                    <li><span>Genre:</span> <%= tvGenre %></li>
                  </ul>
                </div>
                <div class="col-lg-6 col-md-6">
                  <ul>
                    <li>
                      <span>Vote Average:</span> <%= tvVoteAverage %> / <%=
                      tvVoteCount %>
                    </li>
                    <li><span>Popularity:</span> <%= tvPopularity %></li>
                    <li><span>Duration Per Episode:</span> <%= tvEpisodeRunTime %></li>
                    <li><span>Total Season:</span> <%= tvTotalSeason %> </li>
                    <li><span>Total Episode:</span> <%= tvTotalEpisode %> </li>
                    <li><span>Language:</span> <%= tvLanguage %></li>
                  </ul>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12 col-md-12">
               
                  <ul><li><span>Cast : </span>   <% for (let i =0; i <12; i++) { %><a style="color: #fff"  class="showCastImage"  
                    href=""><%= castName[i]%>,  <div><img src="<%= castImage[i]%>" alt=""></div></a><% } %> etc</li></ul>
                </div>
              </div>
            </div>
            <div class="anime__details__btn">
              <a href=" <%= tvHomePage %>" class="watch-btn" target="_blank"
                ><span>More Details</span> <i class="fa fa-angle-right"></i
              ></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-8">
        <div class="anime__details__review">
          <div class="section-title">
            <h5>Photos & Videos</h5>
          </div>
          <div class="anime__review__item">
            <iframe width="750" height="345" src="<%= tvTrailer%>"  frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
          <% for (let i =0; i <tvPhotos.length; i++) { %>
          <div class="gallery">
            <a target="_blank" href="<%= tvPhotos[i]%>">
              <img
                src=" <%= tvPhotos[i]%>"
                alt=""
                width="600"
                height="400"
              />
            </a>
          </div><% } %>
        </div>
      </div>

      <div class="col-lg-4 col-md-4">
   
        <div class="anime__details__sidebar">
          <div class="section-title">
            <h5>you might like...</h5>
          </div>
          <% for (let i =0; i <similarTV.length; i++) { %>
          <div
            class="product__sidebar__view__item set-bg"
            data-setbg=" <%= similarTVImage[i]%>"
          >
            <div class="ep"> <%= similarTVVoteAverage[i]%></div>
           
            <h5><a href="/tv/details/<%= similarTV[i]%>"> <%= similarTVTitle[i]%></a></h5>
          </div><% } %>
        
        </div>
      </div>
    
 
 </div>
    
   


    
    </div>
  </div>
</section>
<!-- Details Section End -->

<%- include ("../partials/footer") %>
